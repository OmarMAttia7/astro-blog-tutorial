---
const links = [
  {
    title: "Home",
    url: "/",
  },
  {
    title: "About",
    url: "/about",
  },
  {
    title: "Blog",
    url: "/blog",
  },
  {
    title: "Tags",
    url: "/tags",
  }
];

export interface Props {
  activeUrl?: string;
}

const { activeUrl } = Astro.props;
---

<style>
  .nav-link__active {
    text-decoration: underline;
  }
</style>
<div class="nav-links">
  {
    links.map((link) => (
      <a
        class={`nav-link ${activeUrl === link.url ? "nav-link__active" : ""}`}
        href={link.url}
      >
        {link.title}
      </a>
    ))
  }
</div>
